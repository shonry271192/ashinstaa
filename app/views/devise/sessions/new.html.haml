.col-md-8.col-md-offset-2
  .row
    .panel.panel-default
      .panel-heading
        %h2 Log in
      .panel-body
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            = f.label :email
            = f.email_field :email, required: false, autofocus: true, class: "form-control"
          .form-group
            = f.label :password
            = f.password_field :password, required: false, class: "form-control"
          .form-group
            = f.label :remember_me
            = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
          .form-group
            = f.button :submit, "Log in", class: "btn btn-info"
        = render "devise/shared/links"