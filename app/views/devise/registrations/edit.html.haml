
.col-md-8.col-md-offset-2
  .row
    .panel.panel-default
      .panel-heading
        %h2
          Edit #{resource_name.to_s.humanize}
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = f.error_notification
          .form-group
            = f.label :email
            = f.email_field :email, required: true, autofocus: true, class: "form-control"
            = f.input :user_name, required: true
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %p
                Currently waiting confirmation for: #{resource.unconfirmed_email}
          .form-group
            = f.label :password
            = f.password_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class: "form-control"
          .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, required: false, class: "form-control"
          .form-group
            = f.label :current_password
            = f.password_field :current_password, hint: "we need your current password to confirm your changes", required: true, class: "form-control"
          .form-actions
            = f.button :submit, "Update", class: "btn btn-info"
      .panel-footer
        %h3 Cancel my account
        %p
          Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"}
        = link_to "Back", :back, class: "btn btn-default"
